<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-tasks fa-3x"></i>
                        </div>
                        <div class="col-9 text-right">
                            <div class="huge">{{ totalAssignments }}</div>
                            <div>Assignments</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-check fa-3x"></i>
                        </div>
                        <div class="col-9 text-right">
                            <div class="huge">{{ completedAssignments }}</div>
                            <div>Completed</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-warning text-white shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-calendar-alt fa-3x"></i>
                        </div>
                        <div class="col-9 text-right">
                            <div class="huge">{{ upcomingAssignments }}</div>
                            <div>Upcoming</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <i class="fas fa-exclamation-circle fa-3x"></i>
                        </div>
                        <div class="col-9 text-right">
                            <div class="huge">{{ overdueAssignments }}</div>
                            <div>Overdue</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/assignment/add" class="btn btn-success mt-3">Add Assignment</a>
</div>
